<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="graphicalcontrollers.gui.BookingRecapController">

    <top>
        <fx:include source="TopBar.fxml" />
    </top>

    <center>
        <VBox alignment="CENTER" styleClass="background-pane">

            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" spacing="25.0" styleClass="form-container">
                <padding>
                    <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
                </padding>

                <Label style="-fx-font-weight: bold; -fx-font-size: 28px;" text="Booking Recap">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <TextField fx:id="trainingPtField" editable="false" mouseTransparent="true" focusTraversable="false" text="text" styleClass="recap-field" />

                <TextField fx:id="dateHourField" editable="false" mouseTransparent="true" focusTraversable="false" text="text" styleClass="recap-field" />

                <TextField fx:id="descriptionField" editable="false" mouseTransparent="true" focusTraversable="false" text="text" styleClass="recap-field" />

                <TextField fx:id="costField" editable="false" mouseTransparent="true" focusTraversable="false" text="text" styleClass="recap-field" />

                <VBox alignment="CENTER" spacing="15.0">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>

                    <Button onAction="#onConfirmClick" defaultButton="true" prefHeight="40.0" prefWidth="120.0" styleClass="primary-button" text="Book" />

                    <Text onMouseClicked="#onCancelClick" styleClass="text-link" text="Cancel" />
                </VBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>