<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="graphicalcontrollers.gui.EditTrainingController">

    <top>
        <fx:include source="TopBar.fxml" />
    </top>

    <center>
        <VBox alignment="CENTER" styleClass="background-pane">

            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="500.0" spacing="20.0" styleClass="form-container">
                <padding>
                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                </padding>

                <Label style="-fx-font-weight: bold; -fx-font-size: 26px;" text="Edit Training Details" />

                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px" text="Training Name" />
                    <TextField fx:id="nameField" editable="false" mouseTransparent="true" focusTraversable="false"
                               styleClass="input-field" style="-fx-opacity: 0.6;" />
                </VBox>

                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px" text="Description" />
                    <TextArea fx:id="descriptionArea" prefHeight="50.0" wrapText="true" styleClass="input-field" />
                </VBox>

                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px" text="Base Price (MAX 30â‚¬)" />
                    <TextField fx:id="priceField" styleClass="input-field"/>
                </VBox>

                <VBox prefHeight="10.0" />

                <Button onAction="#onSaveClick" defaultButton="true" prefHeight="50.0" prefWidth="200.0" styleClass="primary-button" text="Save Changes" />

                <Text onMouseClicked="#onCancelClick" styleClass="text-link" text="Cancel" />

            </VBox>
        </VBox>
    </center>
</BorderPane>