<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Text?>
<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="graphicalcontrollers.gui.TrainingSelectionController">

    <top>
        <fx:include source="TopBar.fxml" />
    </top>

    <center>
        <VBox alignment="CENTER" styleClass="background-pane">

            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="700.0" spacing="20.0" styleClass="form-container">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </padding>

                <Label style="-fx-font-weight: bold; -fx-font-size: 26px;" text="Select a Training">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <TableView fx:id="trainingTable" prefHeight="350.0" prefWidth="640.0" styleClass="custom-table">
                    <columns>
                        <TableColumn fx:id="trainingColumn" text="Training" />
                        <TableColumn fx:id="ptColumn" text="Personal Trainer" />
                        <TableColumn fx:id="descriptionColumn" text="Description" />
                        <TableColumn fx:id="basePriceColumn" text="Price (â‚¬)" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER" spacing="20.0">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>

                    <Text onMouseClicked="#onBackClick" styleClass="text-link" text="Go Back" />

                    <ComboBox fx:id="trainingSelector" visibleRowCount="2" prefHeight="40.0" prefWidth="300.0" promptText="Select an option..." styleClass="custom-combobox" />

                    <Button fx:id="confirmButton" onAction="#onConfirmClick" defaultButton="true" prefHeight="40.0" prefWidth="120.0" styleClass="primary-button" text="Confirm" />
                </HBox>

            </VBox>
        </VBox>
    </center>
</BorderPane>