<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalcontrollers.gui.PTHomepageController">

    <top>
        <fx:include source="TopBar.fxml" />
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="30.0" styleClass="background-pane">
            <padding>
                <Insets top="40.0" />
            </padding>

            <Label styleClass="welcome-title" text="Welcome back Coach!" />

            <HBox styleClass="homepage-container">

                <VBox styleClass="card-container">
                    <Region styleClass="card-image-placeholder, new-event" VBox.vgrow="ALWAYS" />
                    <Button onAction="#onNewEventClick" styleClass="card-button" text="New Event">
                        <VBox.margin><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></VBox.margin>
                    </Button>
                </VBox>

                <VBox styleClass="card-container">
                    <Region styleClass="card-image-placeholder, manage-events" VBox.vgrow="ALWAYS" />
                    <Button onAction="#onManageEventsClick" styleClass="card-button" text="Manage Events">
                        <VBox.margin><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></VBox.margin>
                    </Button>
                </VBox>

                <VBox styleClass="card-container">
                    <Region styleClass="card-image-placeholder, athlete-bookings" VBox.vgrow="ALWAYS" />
                    <Button onAction="#onAthleteBookingsClick" styleClass="card-button" text="Athlete Bookings">
                        <VBox.margin><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></VBox.margin>
                    </Button>
                </VBox>

            </HBox>
        </VBox>
    </center>
</BorderPane>