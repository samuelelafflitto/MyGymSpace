<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="graphicalcontrollers.gui.ChangeNameController">

    <top>
        <fx:include source="TopBar.fxml" />
    </top>

    <center>
        <VBox alignment="CENTER" styleClass="background-pane">

            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="15.0" styleClass="form-container">
                <padding>
                    <Insets bottom="30.0" left="50.0" right="50.0" top="40.0" />
                </padding>

                <Label style="-fx-font-weight: bold; -fx-font-size: 26px;" text="Edit Profile" />

                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px" text="First Name" />
                    <TextField fx:id="firstNameField" prefHeight="40.0" promptText="Enter your first Name" styleClass="input-field" />
                </VBox>

                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px" text="Last Name" />
                    <TextField fx:id="lastNameField" prefHeight="40.0" promptText="Enter your last Name" styleClass="input-field" />
                </VBox>

                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 14px" text="Current Password" />
                    <PasswordField fx:id="oldPasswordField" prefHeight="40.0" promptText="Confirm with current password" styleClass="input-field"/>
                </VBox>

                <VBox prefHeight="10.0" />

                <Button onAction="#onConfirmClick" defaultButton="true" prefHeight="40.0" prefWidth="150.0" styleClass="primary-button" text="Update" />

                <Text onMouseClicked="#onCancelClick" styleClass="text-link" text="Cancel" />

            </VBox>
        </VBox>
    </center>
</BorderPane>